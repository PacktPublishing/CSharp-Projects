{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "Chatbot/Chatbot/Chatbot.csproj",
        "-c",
        "Release",
        "-f",
        "net10.0-desktop"
      ],
      "problemMatcher": "$msCompile",
      "group": {"kind": "build", "isDefault": true}
    },
    {
      "label": "build-wasm",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Chatbot/Chatbot.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net9.0-browserwasm",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-wasm",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Chatbot/Chatbot.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net9.0-browserwasm",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "Chatbot/Chatbot/Chatbot.csproj",
        "-c",
        "Debug",
        "-f",
        "net10.0-desktop"
      ],
      "problemMatcher": "$msCompile",
      "group": {"kind": "build", "isDefault": true}
    },
    {
      "label": "publish-desktop",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "Chatbot/Chatbot/Chatbot.csproj",
        "/property:GenerateFullPaths=true",
        "/property:TargetFramework=net10.0-desktop",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
