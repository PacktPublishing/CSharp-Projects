{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: Card Tracker API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/CardTracker/CardTrackerWebApi/bin/Debug/net10.0/CardTrackerWebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CardTracker/CardTrackerWebApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "console": "internalConsole"
        }
    ]
}
