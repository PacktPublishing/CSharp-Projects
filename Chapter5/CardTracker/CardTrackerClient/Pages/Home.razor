@page "/"
@using CardTrackerClient.Services
@inject IUserService UserService
@inject NavigationManager NavigationManager

<PageTitle>Deck Management</PageTitle>

<h1>Deck Management</h1>

<p>Welcome to your card tracker application.</p>

@if (UserService.IsLoggedIn)
{
    <h2>Manage Your Decks</h2>
    <button class="btn btn-primary" @onclick="ViewDecks">View My Decks</button>
    <button class="btn btn-success" @onclick="CreateDeck">Create New Deck</button>
}
else
{
    <p>Please <a href="/login">log in</a> to manage your decks</p>
}

<button class="btn btn-secondary" @onclick="ViewCards">View All Cards</button>


@code {
    private void CreateDeck()
    {
        throw new NotImplementedException();
    }

    private void ViewCards()
    {
        NavigationManager.NavigateTo("/Cards");
    }

    private void ViewDecks()
    {
        throw new NotImplementedException();
    }
}